<UserControl x:Class="HunterPie.GUI.Parts.Statistics.Views.MonsterSummaryView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="using:HunterPie.GUI.Parts.Statistics.Views"
             xmlns:vm="using:HunterPie.GUI.Parts.Statistics.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="80" 
             d:DesignWidth="80">
             
    <Border CornerRadius="5"
            Background="{StaticResource GRAY_200}">
        <Image d:Source="https://cdn.hunterpie.com/Assets/Monsters/Icons/Rise_109.png"
               Source="{Binding Icon, Mode=OneWay, TargetNullValue={StaticResource ICON_MISSING}}"
               
               Margin="3"/>
    </Border>
</UserControl>
